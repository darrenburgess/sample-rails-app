<% provide(:title, "User Addresses") %>
<h1>User Addresses</h1>
<div class="row">
  <aside>
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="co-md-8">
    <% if @user.addresses.any? %>
      <h3>Addresses</h3>
      <%= render @addresses %>
    <% end %>  
  </div>
</div>
